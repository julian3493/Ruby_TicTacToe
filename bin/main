#!/usr/bin/env 

class Player
  attr_reader :name, :mark
  def initialize(name, mark)
    @name = name
    @mark = mark
  end
end
game = true
winner = false

puts 'Player 1 please write your name'
p1_name = gets.chomp
p1= Player.new(p1_name, "X")
puts 'Player 2 please write your name'
p2_name = gets.chomp
p2= Player.new(p2_name, "X")
while game
  puts "#{p1.name} is X and #{p2.name} is O"
  board = %w[1 2 3 4 5 6 7 8 9]
  print board

  puts "#{p1.name} it's your turn please choose a valid space"
  move1 = gets.chomp.to_i

  board[move1 - 1] = 'X'

  puts "#{p1.name} has selected #{move1}"
  print board

  if winner
    puts "#{p1} is the winner"
    # change game to false
    break
  end
  if draw
    puts "It's a draw"
    # change game to false
    break
  end
  puts "#{p2} it's your turn please choose a valid space"
  move2 = gets.chomp.to_i

  while move1 == move2
    puts "#{p2} it's your turn please choose a valid space other than #{move1}"
    move2 = gets.chomp.to_i
  end

  board[move2 - 1] = 'O'

  puts "#{p2} has selected #{move2}"
  print board

  if winner
    puts "#{p1} is the winner"
    # change game to false
    break
  end
  if draw
    puts "It's a draw"
    # change game to false
    break
  end
  game = false
end
